<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppVitaSangue.Views.pgPerfil"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    android:TabbedPage.ToolbarPlacement="Bottom"
    xmlns:views="clr-namespace:AppVitaSangue.Views"
    Title="Perfil"
    BackgroundColor="{AppThemeBinding Light=#F1F4F4, Dark=#1E1E1E}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                <Frame
                    Padding="0"
                    BackgroundColor="{AppThemeBinding Light=LightGray, Dark=#333333}"
                    CornerRadius="100"
                    HeightRequest="100"
                    WidthRequest="100">
                    <Image
                        x:Name="imgPerfil"
                        Aspect="AspectFill"
                        HeightRequest="95"
                        WidthRequest="95"/>
                </Frame>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label
                        x:Name="lblNome"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="{AppThemeBinding Light=#000000, Dark=White}"/>

                    <Label 
                        x:Name="lblTipoSanguineo" 
                        FontSize="14" 
                        TextColor="{AppThemeBinding Light=#77181E, Dark=#FEB2B2}"/>

                    <Label 
                        x:Name="lblCidade" 
                        FontSize="14" 
                        TextColor="{AppThemeBinding Light=#000000, Dark=#E2E8F0}"/>

                    <Label 
                        x:Name="lblDescricaoPerfil"
                        Text="Descrições sobre o doador."
                        FontAttributes="Italic"
                        FontSize="12"
                        TextColor="{AppThemeBinding Light=#666666, Dark=#A0AEC0}"/>
                </VerticalStackLayout>
            </Grid>

            <Button
                Margin="0,20"
                BackgroundColor="{AppThemeBinding Light=#A92727, Dark=#C53030}"
                Clicked="btnEditarPerfil_Clicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="20"
                HeightRequest="50"
                Text="Editar perfil"
                TextColor="White"/>

            <Frame 
                Padding="15" 
                BorderColor="{AppThemeBinding Light=#EEEEEE, Dark=#333333}"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Histórico de doações"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                    <CollectionView 
                        x:Name="cvHistoricoDoacoes" 
                        EmptyView="Nenhuma doação registrada." 
                        ItemsLayout="VerticalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame 
                                    Padding="10" 
                                    BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#333333}"
                                    CornerRadius="5">
                                    <Grid ColumnDefinitions="*,*">
                                        <Label 
                                            FontSize="14" 
                                            Text="{Binding DataDoacao, StringFormat='{0:dd/MM/yyyy}'}"
                                            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                        <Label
                                            Grid.Column="1"
                                            FontSize="14"
                                            HorizontalOptions="End"
                                            Text="{Binding LocalDoacao}"
                                            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>