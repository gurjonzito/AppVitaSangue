<ContentPage
    x:Class="AppVitaSangue.Views.pgEditarPerfil"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Editar Perfil"
    BackgroundColor="#F1F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">

            <Grid HorizontalOptions="Center">
                <!--  Frame da Imagem  -->
                <Frame
                    Padding="0"
                    BackgroundColor="LightGray"
                    CornerRadius="75"
                    HeightRequest="150"
                    WidthRequest="150">
                    <Image
                        x:Name="imgPerfil"
                        Aspect="AspectFill"
                        HeightRequest="145"
                        WidthRequest="145" />
                </Frame>

                <!--  Overlay de Ação  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#80A92727"
                    CornerRadius="75"
                    HeightRequest="150"
                    IsVisible="{Binding Source={x:Reference imgPerfil}, Path=Source, Converter={StaticResource NullToVisibilityConverter}}"
                    WidthRequest="150">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10" VerticalOptions="Center">

                        <Button
                            x:Name="btnSelecionar"
                            BackgroundColor="#A92727"
                            Clicked="btnSelecionar_Clicked"
                            CornerRadius="20"
                            HeightRequest="40"
                            Text="Selecionar"
                            TextColor="White"
                            WidthRequest="120" />

                        <Button
                            x:Name="btnRemover"
                            BackgroundColor="White"
                            Clicked="btnRemover_Clicked"
                            CornerRadius="20"
                            HeightRequest="40"
                            IsVisible="False"
                            Text="Remover"
                            TextColor="#A92727"
                            WidthRequest="120" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!--  Campos Editáveis  -->
            <Label Text="Nome:" TextColor="#000000" />
            <Entry x:Name="txtNome" Style="{StaticResource CamposText}" />

            <Label Text="E-mail:" TextColor="#000000" />
            <Entry x:Name="txtEmail" Keyboard="Email" Style="{StaticResource CamposText}" />

            <Label Text="Telefone:" TextColor="#000000" />
            <Entry x:Name="txtTelefone" Keyboard="Telephone" Style="{StaticResource CamposText}" />

            <Label Text="Endereço:" TextColor="#000000" />
            <Entry x:Name="txtEndereco" Style="{StaticResource CamposText}" />

            <Label Text="Cidade:" TextColor="#000000" />
            <Entry x:Name="txtCidade" Style="{StaticResource CamposText}" />

            <!--  Botão Salvar  -->
            <Button
                BackgroundColor="#A92727"
                Clicked="btnSalvar_Clicked"
                CornerRadius="10"
                HeightRequest="45"
                Text="Salvar"
                TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>